@implements IDisposable

<div class="rvt-m-bottom-lg">
	<div class="rvt-collapsible rvt-collapsible--panel">
		<h3 class="rvt-collapsible__title">
			<button type="button" aria-expanded="@(Open ? "true" : "false")">
				@if (Open)
				{
					<rvt-icon name="chevron-down" @onclick="ToggleOpenStatus"></rvt-icon>
				}
				else
				{
					<rvt-icon name="chevron-right" @onclick="ToggleOpenStatus"></rvt-icon>
				}
				<span>@Title</span>
			</button>
		</h3>
		@if (Open)
		{
			<div class="rvt-collapsible__content">
				<div class="rvt-m-all-remove">
					@Content
				</div>
			</div>
		}
	</div>
</div>

@code {
	[Parameter]
	public RenderFragment Title { get; set; }

	[Parameter]
	public RenderFragment Content { get; set; }

	[Parameter]
	public bool Open { get; set; } = true;


	protected override async Task OnInitializedAsync()
	{
	}

	private void ToggleOpenStatus()
	{
		Open = !Open;
	}

	public void Dispose()
	{
	}
}